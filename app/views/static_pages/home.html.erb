<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/cause_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Cause Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
  <div class="center hero-unit">
    <h1>Contribute to good deeds in your community and beyond.</h1>

    <%= link_to "Get Started", signup_path, 
                                class: "btn btn-large btn-primary" %>
  </div>

<% end %>